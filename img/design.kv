<VideoScreen>:

    GridLayout:
        background_color: 1, 1, 1, 1
        cols:1

        RelativeLayout:
            size_hint: 0.2, 0.2
            pos_hint: {"center_x": 0.2, "center_y": 0.6}
            ImageButton:
                size_hint: 0.7, 0.7
                pos_hint: {"center_x": 0.2, "center_y": 0.6}
